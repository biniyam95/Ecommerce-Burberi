    <h4 class="fw-bold py-2 mb-4 px-4"><span class="text-muted fw-bold">/ EDIT PRODUCT</span> </h4>

                <!-- Basic Layout -->
              <div class="row">
                <div class="col-xl">
                  <div class="card mb-4">
                    <div class="card-header d-flex justify-content-between align-items-center">
                      
                    </div>
                    <div class="card-body">
                     
                      {{!-- form --}}
                      <form action="/admin/edit-product/{{aProduct._id}}" method="post" enctype="multipart/form-data">
                       
                        {{!-- image 1--}}
                        <div class="mb-3">
                          <label class="form-label text-info" for="">Image 1
                            <img src="/product-images/{{aProduct.prodImage1}}"   id="imageId1"  alt="" style="height:30px ;margin-left: 2px;">
                          </label>
                          <input class="form-control"  type="file"  name="prodImage1" id="prodImage1" value="/product-images/{{aProduct.prodImage1}}"  onchange="viewchangedImage1(event)" />
                        </div>

                        {{!-- image 2--}}
                        <div class="mb-3">
                          <label class="form-label text-info" for="">Image 2
                            <img src="/product-images/{{aProduct.prodImage2}}"   id="imageId2"  alt="" style="height:30px ;margin-left: 2px;">
                          </label>
                          <input class="form-control"  type="file"  name="prodImage2" id="prodImage2" value="/product-images/{{aProduct.prodImage2}}"  onchange="viewchangedImage2(event)" />
                        </div>

                        {{!-- image 3--}}
                        <div class="mb-3">
                          <label class="form-label text-info" for="">Image 3
                            <img src="/product-images/{{aProduct.prodImage3}}"   id="imageId3"  alt="" style="height:30px ;margin-left: 2px;">
                          </label>
                          <input class="form-control"  type="file"  name="prodImage3" id="prodImage3" value="/product-images/{{aProduct.prodImage3}}"  onchange="viewchangedImage3(event)" />
                        </div>

                        {{!-- image 4--}}
                        <div class="mb-3">
                          <label class="form-label text-info" for="">Image 4
                            <img src="/product-images/{{aProduct.prodImage4}}"  id="imageId4"  alt="" style="height:30px ;margin-left: 2px;">
                          </label>
                          <input class="form-control"  type="file"  name="prodImage4" id="prodImage4" value="/product-images/{{aProduct.prodImage4}}"  onchange="viewchangedImage4(event)" />
                        </div>



                        {{!-- name --}}
                        <div class="mb-3">
                          <label class="form-label text-info" for="">Name</label>
                          <input type="text" class="form-control" name="prodName" id="prodName"  value="{{aProduct.prodName}}"  />
                        </div>

                         {{!-- category --}}
                        <div class="mb-3">
                          <label class="form-label text-info" for="">Category</label>
                          
                          <div class="col-sm-9">
                           <select class="form-control form-select" name="categName" value="{{aProduct.categName}}" >
                             {{#each AllCategs}}
                              <option  value="{{this.categoryName}}">{{this.categoryName}}</option>
                            {{/each}}
                          </select>
                          </div>

                        </div>

                         {{!-- price --}}
                         <div class="mb-3">
                          <label class="form-label text-info" for="">Price</label>
                          <input type="number" class="form-control" name="price" id="price" value="{{aProduct.price}}"   />
                        </div>

                        {{!-- stock --}}
                        <div class="mb-3">
                          <label class="form-label text-info" for="">Stock</label>
                          <input type="number" class="form-control" name="stock" id="stock" value="{{aProduct.stock}}"   />
                        </div>

                        <div class="mb-3">
                          <label class="form-label text-info" for="">Actual Price</label>
                          <input type="number" class="form-control" name="actualPrice" id="actualPrice" value="{{aProduct.actualPrice}}"   />
                        </div>

                        <div class="mb-3">
                          <label class="form-label text-info" for="">WholeSale Price</label>
                          <input type="number" class="form-control" name="wholePrice" id="wholePrice" value="{{aProduct.wholePrice}}"   />
                        </div>
                        
                        {{!-- submit --}}
                        
                        <button type="submit" class="btn btn-warning text-dark">Save</button>
                         <button  class="btn btn-secondary" ><a href="/admin/product-List" class="text-white" >Cancel</a></button>

                      </form>


                    </div>
                  </div>
                </div>
                 
                <div class="col-xl">
                  {{!-- adjacent column in the same row as above form--}}
                </div>
              </div>

<script>
  function viewchangedImage1(event){
          document.getElementById("imageId1").src=URL.createObjectURL(event.target.files[0])
         }

          function viewchangedImage2(event){
          document.getElementById("imageId2").src=URL.createObjectURL(event.target.files[0])
         }
          function viewchangedImage3(event){
          document.getElementById("imageId3").src=URL.createObjectURL(event.target.files[0])
         }
          function viewchangedImage4(event){
          document.getElementById("imageId4").src=URL.createObjectURL(event.target.files[0])
         }
</script>