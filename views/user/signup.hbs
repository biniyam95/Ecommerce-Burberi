<div class="container" style="margin-top:125px ;">
     <div class="row">
         <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 outerBoxSignUP ">
               <form action="/signup" method="POST">
  <!-- FirstName -->
  <div class="form-group">
    <label id="firstname-err" >First name</label>
    <input type="text" id="firstname" name="firstname" placeholder="enter first name  " class="form-control " onkeyup="validateFirstName()"/>
    
  </div>

    <!-- LastName -->           
  <div class="form-group">
    <label id="lastname-err">Last name</label>
    <input type="text" id="lastname" name="lastname" placeholder="enter last name" class="form-control "  onkeyup="validateLastName()"/>
    
  </div>
  
  
  <!-- Email  -->
  <div class="form-outline mb-2">
    <label class="form-label" for="form2Example1" id="email-err">Email address</label>
     <input type="email"  id="email" name="email" placeholder="enter email" class="form-control" onkeyup="validateEmail()"/>
     
  </div>

  <!-- Phone  -->
  <div class="form-outline mb-2">
    <label class="form-label" for="form2Example1" id="phone-err">Phone</label>
     <input type="text" id="phone" name="phone" placeholder="enter number" class="form-control" onkeyup="validatePhone()"/>
     
  </div>

  <!-- Password  -->
  <div class="form-outline mb-2">
    <label class="form-label" for="form2Example2" id="password-err">Password</label>
    <input type="password"   id="password" name="password" placeholder="enter password" class="form-control" onkeyup="validatePassword()"/>
    
  </div>

  

  {{!-- <!-- Submit button -->instead of writing signup you can put that in a value="" attribute --}}
  <div class="text-center">
    <button type="submit" class="btn btn-dark" onclick="return validateForm()">Sign Up</button>
    <span id="submit-err" ></span>
  </div>  
   

  <!-- Register buttons -->
  <div class="text-center mt-2">
    <p>Already a member? <a href="/login">Login</a></p>  
  </div>
</form>
         </div> 
     </div>
  </div>










